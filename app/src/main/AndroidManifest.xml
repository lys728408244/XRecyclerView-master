<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mars.xrecyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="com.mars.xrecyclerview.ExampleApplication"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mars.xrecyclerview.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.mars.xrecyclerview.AlphaChangeActivity"
            android:label="@string/app_name"
            android:theme="@style/SupportTheme" />

        <activity
            android:name="com.mars.xrecyclerview.LinearActivity"
            android:label="@string/app_name"
            android:theme="@style/SupportTheme" />
        <activity
            android:name="com.mars.xrecyclerview.GridActivity"
            android:label="@string/app_name"
            android:theme="@style/SupportTheme" />
        <activity
            android:name="com.mars.xrecyclerview.StaggeredGridActivity"
            android:label="@string/app_name"
            android:theme="@style/SupportTheme" />

        <activity
            android:name="com.mars.xrecyclerview.LinearStickyScrollActivity"
            android:label="@string/app_name"
            android:theme="@style/SupportTheme"/>

        <activity
            android:name="com.mars.xrecyclerview.EmptyViewActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.mars.xrecyclerview.CollapsingToolbarLayoutActivity"
            android:theme="@style/SupportTheme" />
        <activity
            android:name="com.mars.xrecyclerview.DisableExampleActivity"
            android:theme="@style/SupportTheme" />
        <activity
            android:name="com.mars.xrecyclerview.MultiHeaderActivity"
            android:theme="@style/SupportTheme" />
        <activity
            android:name="com.mars.xrecyclerview.ItemDecorationActivity"
            android:theme="@style/SupportTheme"></activity>

    </application>

</manifest>